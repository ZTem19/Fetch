@using FetchApp.Data

@page "/Adpot"

<div class="container">

	<div class="title">

		<div class="name">
			@_dog.Name
		</div>

		<div class="age">
			@_dog.Age
		</div>

	</div>

	<div class="picture">
		<img src="@_dog.ImagePath" alt="@(_dog.Name)'s Beautiful Picture" />
	</div>

	<div class="description">
		<p>
			@_dog.Description
		</p>
	</div>

</div>

@code {
	[SupplyParameterFromQuery]
	public int DogId { get; set; }

	private DogListing? _dog;

}